\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{highlighting}[2014/04/01 Code Highlighting Package]

% Package Requirements
\RequirePackage{listings}
\RequirePackage{courier}
\RequirePackage{xcolor}
\RequirePackage{color}


% Define Java syntax highlighting
\definecolor{javared}{rgb}{0.6,0,0} % for strings
\definecolor{javagreen}{rgb}{0.25,0.5,0.35} % comments
\definecolor{javapurple}{rgb}{0.5,0,0.35} % keywords
\definecolor{javablue}{rgb}{0.25,0.35,0.75} % javadoc
\lstset{language=Java,
  frame=shadowbox,
  captionpos=b,
  rulesepcolor=\color{black},
  basicstyle=\ttfamily,
  keywordstyle=\color{javapurple}\bfseries,
  stringstyle=\color{javablue},
  commentstyle=\color{javagreen},
  morecomment=[s][\color{javagreen}]{/**}{*/},
  stepnumber=2,
  numbersep=10pt,
  tabsize=4,
  showtabs=false,
  showspaces=false,
  showstringspaces=false,
  breaklines=true, 
  breakatwhitespace=false
}

% Define XML syntax highlighting
\definecolor{maroon}{rgb}{0.5,0,0}
\definecolor{darkgreen}{rgb}{0,0.5,0}
\lstdefinelanguage{XML}
{
  basicstyle=\ttfamily,
  morestring=[s]{"}{"},
  morecomment=[s]{?}{?},
  morecomment=[s]{!--}{--},
  commentstyle=\color{darkgreen},
  moredelim=[s][\color{black}]{>}{<},
  moredelim=[s][\color{red}]{\ }{=},
  stringstyle=\color{blue},
  identifierstyle=\color{maroon}
}

